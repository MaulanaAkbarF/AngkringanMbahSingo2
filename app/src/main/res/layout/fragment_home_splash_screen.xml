<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity.SplashScreen">

    <ImageView
        android:id="@+id/hssximageView"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/logovincentbiru" />

    <LinearLayout
        android:id="@+id/hssxlinearjudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hssximageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:text="SELAMAT DATANG"
            android:textColor="@color/dark_purple"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hssxtextNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:text="Nama Kamu"
            android:textColor="@color/light_blue"
            android:textSize="30sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="2"/>
    </LinearLayout>


</RelativeLayout>