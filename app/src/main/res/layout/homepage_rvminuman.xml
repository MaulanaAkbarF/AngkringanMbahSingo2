<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/hpr.ukurangambar"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/semiwhite"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/hpr.ukurangambar"
                android:layout_height="@dimen/hpr.ukurangambar"
                android:src="@drawable/imagedrink"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/hpxjudul"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/hpr.panjanglayoutjudul"
                    android:text="Judul Menu yang dijual di dalam Angkringan"
                    android:textSize="@dimen/hpr.ukuranjudul"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/hpxharga"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/hpr.panjanglayoutharga"
                    android:layout_marginTop="5dp"
                    android:text="Rp. 10000"
                    android:textSize="@dimen/hpr.ukuranharga"
                    android:textColor="@color/red"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>