<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/fmakxconsmain"
    tools:context=".Fragments.InterfaceMakananFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/interxconsimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/interximage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imagefood"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/fmakxback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:src="@drawable/backbutton1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/interxconsmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/interxconsimage"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/interxidmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text=" "
            android:textSize="@dimen/hp.ukuranteksinfo"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/interxjudulmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Judul Menu"
            android:textSize="@dimen/hp.ukuranteksinfo"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/interxidtransaksi"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Judul Menu"
            android:textSize="@dimen/hp.ukuranteksinfo"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@id/interxjudulmenu"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/interxdescmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/interxjudulmenu"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Deskripsi menu yang dijual di Angkringan Mbah Singo, meliputi bahan yang digunakan, rasa dan kelebihan menu"
            android:textSize="@dimen/hp.ukuranteksinfo" />
        <TextView
            android:id="@+id/interxhargamenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/interxdescmenu"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Rp. 10000"
            android:textSize="@dimen/hp.ukuranteksinfo"
            android:textColor="@color/red"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/interxhargamenu"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Stok Tersedia : "
                android:textSize="@dimen/hp.ukuranteksinfo"
                android:textStyle="italic"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/interxstokmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="100 "
                android:textSize="@dimen/hp.ukuranteksinfo"
                android:textStyle="bold|italic"
                android:textColor="@color/black"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/interxconsmenu">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#bdbdbd" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/interxconsjumlah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Tentukan Jumlah :"
                    android:textSize="@dimen/hp.ukuranteksinfo"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/interximageplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/imageplus"/>
                <TextView
                    android:id="@+id/interxteksjumlah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:paddingHorizontal="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/interximageplus"
                    android:text="1"
                    android:textSize="@dimen/hp.ukuranteksinfo"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <ImageView
                    android:id="@+id/interximagemin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/interxteksjumlah"
                    android:src="@drawable/imagemin"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toBottomOf="@id/interxconsjumlah"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#bdbdbd"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                app:layout_constraintTop_toBottomOf="@id/interxconsjumlah">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Total Pesanan :"
                    android:textSize="@dimen/hp.ukuranteksinfo"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/interxtotalharga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Rp. 10000"
                    android:textSize="@dimen/hp.ukuranteksinfo"
                    android:textColor="@color/red"
                    android:textStyle="bold"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/interxbtnkeranjang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/interxbtnbeli"
            android:layout_margin="10dp"
            android:paddingVertical="5dp"
            android:backgroundTint="@color/dark_blue"
            android:text="KERANJANG"
            android:textSize="@dimen/hp.ukuranteksinfo"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:cornerRadius="5dp" />
        <Button
            android:id="@+id/interxbtnbeli"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/interxbtnkeranjang"
            android:layout_margin="10dp"
            android:paddingVertical="5dp"
            android:backgroundTint="@color/dark_red"
            android:text="BELI"
            android:textSize="@dimen/hp.ukuranteksinfo"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:cornerRadius="5dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>