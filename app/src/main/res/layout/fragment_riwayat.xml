<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:context=".Fragments.RiwayatFragment">
    <LinearLayout
        android:id="@+id/friwxlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/friwxsign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="@dimen/fh.margininput"
            android:text="Riwayat Pembelian"
            android:textSize="@dimen/fh.ukuranteksjudul"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/dark_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/friwxinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/searchgreyicon"
                android:drawablePadding="10dp"
                android:hint="Cari Riwayat..."
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_blue"
                android:textSize="@dimen/lp.ukuranteksinput" />
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consoption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/friwxbtnfilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Filter"
                android:textSize="@dimen/hp.ukuranteksinfo"
                android:textColor="@color/dark_blue"/>
            <TextView
                android:id="@+id/friwxbtnhapussemua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Hapus Semua"
                android:textSize="@dimen/hp.ukuranteksinfo"
                android:textColor="@color/red"/>
            <TextView
                android:id="@+id/friwxbtnubah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="8dp"
                android:text="Ubah"
                android:textSize="@dimen/hp.ukuranteksinfo"
                android:textColor="@color/dark_blue"/>
            <TextView
                android:id="@+id/friwxbtnselesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="8dp"
                android:text="Selesai"
                android:textSize="@dimen/hp.ukuranteksinfo"
                android:textColor="@color/dark_green"/>
            <TextView
                android:id="@+id/friwxbtnhapusfilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="8dp"
                android:text="Hapus Filter"
                android:textSize="@dimen/hp.ukuranteksinfo"
                android:textColor="@color/red"/>
            <TextView
                android:id="@+id/friwxbtnrefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="8dp"
                android:text="Segarkan"
                android:textSize="@dimen/hp.ukuranteksinfo"
                android:textColor="@color/red"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/driwxcardleft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/driwxcardright"
                app:layout_constraintBottom_toBottomOf="@+id/dpxview1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="10dp"
                    android:gravity="center"
                    android:text="Riwayat Pembelian"
                    android:textSize="@dimen/hp.ukuranteksinfo"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_regular"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/driwxcardright"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/driwxcardleft"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/dpxview1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="10dp"
                    android:gravity="center"
                    android:text="Dalam Antrian"
                    android:textSize="@dimen/hp.ukuranteksinfo"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_regular"/>
            </androidx.cardview.widget.CardView>
            <View
                android:id="@+id/dpxview1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@id/driwxcardleft"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="#bdbdbd" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/friwxteksttriwayat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/consstatus"
            android:gravity="center"
            android:layout_marginVertical="20dp"
            android:text="Riwayat Kosong"
            android:textSize="@dimen/fh.ukuranteksjudul"
            android:textStyle="bold"
            android:visibility="visible"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/friwxlinear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/friwxrecycleriwayat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="1"
            android:orientation="vertical"
            tools:listitem="@layout/homepage_rvriwayat"/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>