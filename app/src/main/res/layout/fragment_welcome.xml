<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    tools:context=".MainActivity.MainLogin">

    <LinearLayout
        android:id="@+id/fwxlinearjudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/be_vietnam_extrabold"
            android:text="Selamat Datang Di"
            android:textColor="@color/white"
            android:textSize="@dimen/wp.ukuranfontwelcome" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/be_vietnam_extrabold"
            android:text="V Angkringan"
            android:textColor="@color/white"
            android:textSize="@dimen/wp.ukuranfontwelcome" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fwxlinearimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fwxlinearjudul">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logovincent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fwxlinearbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/wpxbtnmasuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:paddingTop="@dimen/wp.lebartombol"
            android:paddingBottom="@dimen/wp.lebartombol"
            android:paddingRight="@dimen/wp.panjangtombol"
            android:paddingLeft="@dimen/wp.panjangtombol"
            android:text="MASUK"
            android:textSize="@dimen/wp.ukuranfontmasuk"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:cornerRadius="50dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Anda belum punya akun?"
            android:textSize="@dimen/wp.ukuranfontdaftar"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/wpxtxtDaftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Daftar Gratis!"
            android:onClick="wpxDaftar"
            android:textSize="@dimen/wp.ukuranfontdaftar"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>