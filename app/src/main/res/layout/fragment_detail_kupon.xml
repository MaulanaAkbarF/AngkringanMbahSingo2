<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    android:id="@+id/dkxscrollanimate"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.DetailKuponFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dkxconsjudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/dkxbtnback"
                app:layout_constraintBottom_toTopOf="@id/dkxtxtsubtotal"
                android:text="Kupon Anda"
                android:textSize="@dimen/hp.ukuranteksatas"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_semibold"/>
            <ImageView
                android:id="@+id/dkxbtnback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="10dp"
                android:src="@drawable/bluex"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/dkxtxtsubtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/dkxbtnback"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Minimal Belanja Anda : Rp. 40.000"
                android:textSize="@dimen/hp.ukuranteksinfo"
                android:textStyle="italic"
                android:fontFamily="@font/inter_regular"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/consgratisongkir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dkxconsjudul"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Kupon Gratis Ongkir"
                android:textSize="@dimen/hp.ukuranteksinfo"
                android:textColor="@color/dark_green"
                android:fontFamily="@font/inter_regular"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ScrollView
            android:id="@+id/dpxscrollrv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/consgratisongkir"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dkxrecycleko"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:spanCount="1"
                android:orientation="vertical"
                tools:listitem="@layout/homepage_rvkupon"/>
        </ScrollView>
        <LinearLayout
            android:id="@+id/dpxlineartampilkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@id/dpxscrollrv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/conscashback"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tampilkan Semua"
                android:textSize="@dimen/hp.ukuranteksinfo"
                android:textColor="@color/dark_blue"
                android:gravity="center"
                android:fontFamily="@font/inter_regular"
                android:textStyle="bold"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conscashback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dpxlineartampilkan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Kupon Uang Kembali"
                android:textSize="@dimen/hp.ukuranteksinfo"
                android:textColor="@color/dark_purple"
                android:fontFamily="@font/inter_regular"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ScrollView
            android:id="@+id/dpxscrollrv2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/conscashback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dkxrecycleks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:spanCount="1"
                android:orientation="vertical"
                tools:listitem="@layout/homepage_rvkupon"/>
        </ScrollView>
        <LinearLayout
            android:id="@+id/dpxlineartampilkan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@id/dpxscrollrv2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/dpxconsbutton"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tampilkan Semua"
                android:textSize="@dimen/hp.ukuranteksinfo"
                android:textColor="@color/dark_blue"
                android:gravity="center"
                android:fontFamily="@font/inter_regular"
                android:textStyle="bold"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dpxconsbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/dpxlineartampilkan2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <Button
                android:id="@+id/dkxbtnpilih"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_blue"
                android:fontFamily="@font/inter_regular"
                android:text="Pilih Kupon"
                android:textSize="@dimen/hp.ukuranteksinfo"
                app:cornerRadius="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>