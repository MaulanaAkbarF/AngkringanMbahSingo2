<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/dpxscrollanimate"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.DetailPesananFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dpxconslay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dpxconsjudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/dpxbtnback"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Rangkuman Pesanan"
                android:textSize="@dimen/hp.ukuranteksatas"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_semibold"/>
            <ImageView
                android:id="@+id/dpxbtnback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="10dp"
                android:src="@drawable/bluex"
                android:scaleType="centerCrop"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ScrollView
            android:id="@+id/dpxscrollrv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/dpxconsjudul"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dpxrecyclemenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:spanCount="1"
                android:orientation="vertical"
                tools:listitem="@layout/homepage_rvrangkuman"/>
        </ScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dpxconsalamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/dpxscrollrv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/dpxlabelteks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/dpxview1"
                android:layout_marginTop="10dp"
                android:text="Rincian Pesanan"
                android:textSize="@dimen/fh.ukurantekssubjudul"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/black"/>
            <View
                android:id="@+id/dpxview1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@id/dpxlabelteks"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/dpxlabelpengiriman"
                android:background="#bdbdbd" />
            <TextView
                android:id="@+id/dpxlabelpengiriman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dpxview1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:text="Antar ke Rumah"
                android:textSize="@dimen/fh.ukurantekssubjudul"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/dark_green"/>
            <TextView
                android:id="@+id/dpxtxtalamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dpxlabelpengiriman"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="10dp"
                android:text="Jl. Bareng Yuk, Nganjuk, Nganjuk, Nganjuk, Nganjuk, Nganjuk, Jawa Timur"
                android:textSize="@dimen/hp.ukuranteksinfo"
                android:fontFamily="@font/inter_regular"
                android:ellipsize="end"
                android:maxLines="2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dpxconsmetode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/dpxconsalamat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <View
                android:id="@+id/dpxview2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#bdbdbd" />
            <TextView
                android:id="@+id/dpxlabelmetode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dpxview2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:text="Metode Pembayaran"
                android:textSize="@dimen/fh.ukurantekssubjudul"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/dark_blue"/>
            <TextView
                android:id="@+id/dpxtxtmetode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dpxlabelmetode"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="10dp"
                android:text="Tunai"
                android:textSize="@dimen/hp.ukuranteksinfo"
                android:fontFamily="@font/inter_regular"
                android:ellipsize="end"
                android:maxLines="2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dpxconskupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/dpxconsmetode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <View
                android:id="@+id/dpxview3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#bdbdbd" />
            <TextView
                android:id="@+id/dpxlabelkupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dpxview3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:text="Kupon Promo"
                android:textSize="@dimen/fh.ukurantekssubjudul"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/dark_purple"/>
            <TextView
                android:id="@+id/dpxtxtkupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dpxlabelkupon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="10dp"
                android:text="Gunakan Kupon Promo Anda!"
                android:textSize="@dimen/hp.ukuranteksinfo"
                android:fontFamily="@font/inter_regular"
                android:ellipsize="end"
                android:maxLines="2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dpxconscatatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/dpxconskupon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <View
                android:id="@+id/dpxview5"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#bdbdbd" />
            <TextView
                android:id="@+id/dpxlabelcatatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dpxview5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:text="Catatan : "
                android:textSize="@dimen/fh.ukurantekssubjudul"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/dark_red"/>
            <EditText
                android:id="@+id/dpxtxtcatatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/dpxlabelcatatan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:drawableLeft="@drawable/note_icon_1"
                android:backgroundTint="#FFFFFF" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dpxconssubtotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/dpxconscatatan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <View
                android:id="@+id/dpxview4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#bdbdbd" />
            <TextView
                android:id="@+id/dpxlabel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/dpxview4"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Ongkos Kirim"
                android:textSize="@dimen/fh.ukurantekssubjudul"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_semibold"/>
            <TextView
                android:id="@+id/dpxongkir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/dpxview4"
                app:layout_constraintEnd_toStartOf="@id/dpxongkir2"
                android:text="Rp. Gratis"
                android:textSize="@dimen/fh.ukurantekssubjudul"
                android:textColor="@color/red"/>
            <TextView
                android:id="@+id/dpxongkir2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/dpxview4"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Rp. Gratis"
                android:textSize="@dimen/fh.ukurantekssubjudul"
                android:textColor="@color/red"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/dpxlabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/dpxlabel1"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Subtotal"
                android:textSize="@dimen/fh.ukurantekssubjudul"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_semibold"/>
            <TextView
                android:id="@+id/dpxsubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/dpxongkir"
                app:layout_constraintEnd_toStartOf="@id/dpxsubtotal2"
                android:text="Rp. Gratis"
                android:textSize="@dimen/fh.ukurantekssubjudul"
                android:textColor="@color/red"/>
            <TextView
                android:id="@+id/dpxsubtotal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/dpxongkir"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Rp. Gratis"
                android:textSize="@dimen/fh.ukurantekssubjudul"
                android:textColor="@color/red"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/dpxlabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toBottomOf="@id/dpxlabel2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/dpxbtnpesan"
                android:text="Pembayaran"
                android:textSize="@dimen/fh.ukurantekssubjudul"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_semibold"/>
            <TextView
                android:id="@+id/dpxpembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toBottomOf="@id/dpxsubtotal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/dpxbtnpesan"
                android:text="Tunai"
                android:textSize="@dimen/fh.ukurantekssubjudul"
                android:textColor="@color/dark_blue"/>
            <Button
                android:id="@+id/dpxbtnpesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_blue"
                android:paddingVertical="10dp"
                android:text="Pesan"
                android:textSize="@dimen/fh.ukuranteksjudul"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>