<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:context=".Fragments.MakananFragment">
    <LinearLayout
        android:id="@+id/fmakxlinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fmakxsign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="@dimen/fh.margininput"
            android:text="Semua Makanan"
            android:textSize="@dimen/fh.ukuranteksjudul"
            android:textColor="@color/dark_blue"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cariii"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:padding="10dp"
            android:background="@drawable/edittext_bg"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/searchgreyicon"
                android:text="Cari"
                android:textSize="15sp"
                android:drawablePadding="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fmakxconsspinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/fh.margintekssubjudul">
            <Spinner
                android:id="@+id/fmakxspinner"
                android:background="@drawable/spinner_style"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/fmakxteksttmakanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fmakxconsspinner"
            android:gravity="center"
            android:layout_marginVertical="20dp"
            android:text="Menu Tidak Tersedia"
            android:textSize="@dimen/fh.ukuranteksjudul"
            android:textStyle="bold"
            android:visibility="visible"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fmakxlinear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fmakxrecyclemakanan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="3"
            tools:listitem="@layout/homepage_rvmenu"/>
    </ScrollView>
    <TextView
        android:id="@+id/mainxtxtset"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>