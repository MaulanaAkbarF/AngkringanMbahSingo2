<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/semiwhite"
        app:cardCornerRadius="10dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/hpximagestatus"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/imagefood"/>
            <TextView
                android:id="@+id/hpxteksidtrs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="3dp"
                android:paddingHorizontal="7dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/hpximagestatus"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="TRS0000001"
                android:textColor="@color/black"
                android:textSize="@dimen/hp.ukuranteksinfo"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/hpxteksstatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="3dp"
                android:paddingHorizontal="7dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/hpximagestatus"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Menunggu Konfirmasi Penjual"
                android:textColor="@color/black"
                android:textSize="@dimen/hpr.ukuranjudul"/>
            <TextView
                android:id="@+id/hpxteksproduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="3dp"
                android:paddingHorizontal="7dp"
                app:layout_constraintTop_toBottomOf="@id/hpxteksstatus"
                app:layout_constraintStart_toEndOf="@id/hpximagestatus"
                app:layout_constraintEnd_toStartOf="@id/hpxtekskirimbukti"
                android:text="3 Produk"
                android:textSize="@dimen/hpr.ukuranharga"/>
            <TextView
                android:id="@+id/hpxtekskirimbukti"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="3dp"
                android:paddingHorizontal="7dp"
                android:gravity="right"
                app:layout_constraintTop_toBottomOf="@id/hpxteksstatus"
                app:layout_constraintStart_toEndOf="@id/hpxteksproduk"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Kirim Bukti Transfer"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/hpr.ukuranharga"/>
            <ScrollView
                android:id="@+id/hpxscrollpesanan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/hpxteksproduk"
                app:layout_constraintStart_toEndOf="@id/hpximagestatus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/hpxtekstampilkan"
                android:visibility="gone">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fantxrvchildantrian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="1"
                    android:orientation="vertical"
                    tools:listitem="@layout/homepage_childrvantrian"/>
            </ScrollView>
            <TextView
                android:id="@+id/hpxtekstampilkan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="3dp"
                android:paddingHorizontal="7dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/hpxscrollpesanan"
                app:layout_constraintStart_toEndOf="@id/hpximagestatus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Tampilkan Pesanan"
                android:textColor="@color/red"
                android:fontFamily="@font/inter_semibold"
                android:textSize="@dimen/hpr.ukuranharga"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>