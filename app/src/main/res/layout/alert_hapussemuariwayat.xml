<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/semiwhite"
    android:layout_margin="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/alertxjudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Hapus Semua Riwayat"
            android:gravity="center"
            android:textSize="@dimen/hp.ukuranteksinfo"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <ImageView
            android:id="@+id/alertximage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/alertxjudul"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/warning"/>
        <TextView
            android:id="@+id/alertxteks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/alertximage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Anda yakin ingin menghapus semua Riwayat Transaksi Anda?"
            android:gravity="center"
            android:textSize="@dimen/hp.ukuranteksinfo"/>
        <TextView
            android:id="@+id/alertxteks2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/alertxteks"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Tindakan ini tidak bisa diurungkan"
            android:textColor="@color/red"
            android:gravity="center"
            android:textSize="@dimen/hp.ukuranteksinfo"/>
        <Button
            android:id="@+id/alertxbtnkirim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/alertxteks2"
            app:layout_constraintEnd_toStartOf="@id/alertxbtnbatal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="20dp"
            android:paddingVertical="5dp"
            android:backgroundTint="@color/dark_blue"
            android:text="KEMBALI"
            android:textSize="@dimen/hp.ukuranteksinfo"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:cornerRadius="5dp" />
        <Button
            android:id="@+id/alertxbtnbatal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/alertxteks2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/alertxbtnkirim"
            android:layout_margin="20dp"
            android:paddingVertical="5dp"
            android:backgroundTint="@color/dark_red"
            android:text="HAPUS"
            android:textSize="@dimen/hp.ukuranteksinfo"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:cornerRadius="5dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>